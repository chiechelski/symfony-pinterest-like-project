<form action="{{ path('register_step2', {type: type}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    <div class="main-container registration-container">
        <div class="col-md-10 col-md-offset-1">

            {% if form.vars['errors'] is not empty %}
                <div class="alert alert-danger">
                     {{ form.vars['errors'][0].getMessage() }}
                </div>
            {% endif %}

            <div class="text-center">
                <strong>
                    Complete your profile for users to view and contact you.
                    <br /><small>* Details are required</small>
                </strong>
                <br /><br />
            </div>

            <div class="form-group">
                {{ form_label(form.name) }}
                {% if form.name.vars.errors|length %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form.name) }}
                    </div>
                {% endif %}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                <div class="clearfix"></div>
            </div>

            <div class="form-group">
                {{ form_label(form.contactPerson) }}
                {% if form.contactPerson.vars.errors|length %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form.contactPerson) }}
                    </div>
                {% endif %}
                {{ form_widget(form.contactPerson, {'attr': {'class': 'form-control'}}) }}
                <div class="clearfix"></div>
            </div>

            <div class="form-group">
                {{ form_label(form.phone) }}
                {% if form.phone.vars.errors|length %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form.phone) }}
                    </div>
                {% endif %}
                {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                <div class="clearfix"></div>
            </div>

            <div class="form-group">
                {{ form_label(form.mobile) }}
                {% if form.mobile.vars.errors|length %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form.mobile) }}
                    </div>
                {% endif %}
                {{ form_widget(form.mobile, {'attr': {'class': 'form-control'}}) }}
                <div class="clearfix"></div>
            </div>

            <div class="form-group">
                {{ form_label(form.address) }}
                {% if form.address.vars.errors|length %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form.address) }}
                    </div>
                {% endif %}
                {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                <div class="clearfix"></div>
            </div>

            <div class="form-group">
                {{ form_label(form.state) }}
                {% if form.state.vars.errors|length %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form.state) }}
                    </div>
                {% endif %}
                {{ form_widget(form.state, {'attr': {'class': 'form-control'}}) }}
                <div class="clearfix"></div>
            </div>

            <div class="form-group">
                {{ form_label(form.country) }}
                {% if form.country.vars.errors|length %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form.country) }}
                    </div>
                {% endif %}
                {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                <div class="clearfix"></div>
            </div>

            <div class="form-group">
                {{ form_label(form.website) }}
                {% if form.website.vars.errors|length %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form.website) }}
                    </div>
                {% endif %}
                {{ form_widget(form.website, {'attr': {'class': 'form-control'}}) }}
                <div class="clearfix"></div>
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {% if form.description.vars.errors|length %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form.description) }}
                    </div>
                {% endif %}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                <div class="clearfix"></div>
            </div>

            <div class="form-group">
                {{ form_label(form.file) }}
                {% if form.file.vars.errors|length %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form.file) }}
                    </div>
                {% endif %}
                {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                <div class="clearfix"></div>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-info pull-right" value="GET STARTED" />
            </div>
        </div>
        {{ form_rest(form) }}
        <div class="clearfix"></div>
    </div>
</form>